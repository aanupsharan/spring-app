<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Define your beans here -->
    <bean id="myFortune" class="com.anup.springapp.HappyFortuneService" />
    <bean id="myCoach" class="com.anup.springapp.BaseballCoach">
    		<constructor-arg ref="myFortune"/>	
    </bean>
    
    <bean id="myCricketCoach" class="com.anup.springapp.CricketCoach">
    		<property name="fortuneService" ref="myFortune" />
    		<property name="emailAddress" value="b@yahoo.cm" />
    		<property name="team" value="Sunrises" />
    </bean>
</beans>





